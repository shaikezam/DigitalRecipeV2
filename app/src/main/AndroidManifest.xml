<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shayzambrovski.digitalrecipe" >

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar" >
        <activity android:name=".MainScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AboutScreen"></activity>
        <activity android:name=".MenuScreen"></activity>
        <activity android:name=".RegisterScreen"></activity>
        <activity android:name=".NewRecipeScreen"></activity>
        <activity android:name=".SaveRecipeScreen"></activity>
        <activity android:name=".MyRecipes"></activity>
        <activity android:name=".OtherRecipes"></activity>
    </application>

</manifest>